@model medics.Models.register

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    @using (Html.BeginForm("signup","main",FormMethod.Post, new { enctype="multipart/form-data" }))
                    {


                        <fieldset class="p-4">
                            <div class="widget user">

                                <div class="form-group choose-file d-inline-flex">
                                    <i class="fa fa-user text-center px-3"></i>
                                    <input type="file" name="imgupload" class="form-control-file mt-2 pt-1" id="input-file">
                                </div>

                            </div>
                            @Html.EditorFor(x=>x.fname, new { htmlAttributes = new { @class = "border p-3 w-100 my-2",@placeholder="First Name*" } })
                            <input type="text" name="lname" placeholder="Last Name*" class="border p-3 w-100 my-2">
                            <input type="number" name="contact" placeholder="Contact*" class="border p-3 w-100 my-2">
                            <input type="date" name="dob" placeholder="Contact*" class="border p-3 w-100 my-2">
                            <input type="email" name="email" placeholder="Email*" class="border p-3 w-100 my-2">
                            <input type="text" name="username" placeholder="Username*" class="border p-3 w-100 my-2">
                            <input type="password" name="pass" placeholder="Password*" class="border p-3 w-100 my-2">

                            <div class="loggedin-forgot d-inline-flex my-3">
                                <input type="checkbox" id="registering" class="mt-1">
                                <label for="registering" class="px-2">By registering, you accept our <a class="text-primary font-weight-bold" href="terms-condition.html">Terms & Conditions</a></label>
                            </div>
                            <button type="submit" class="btn-style-one">Sign Up</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</section>